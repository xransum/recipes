{
  "title": "Tofu Basil Dressing",
  "directions": [
    "Blend tofu, cider vinegar, apple juice, basil, Dijon mustard, garlic, and salt in a blender until dressing is smooth."
  ],
  "ingredients": [
    "1/2 (12 ounce) package firm silken tofu",
    "2 tablespoons cider vinegar",
    "2 tablespoons apple juice",
    "2 tablespoons chopped fresh basil",
    "1/2 teaspoon Dijon mustard",
    "1 clove garlic, minced",
    "1 pinch salt"
  ],
  "lang": "en-US",
  "tags": [],
  "source": "All Recipes",
  "sourceUrl": "http://allrecipes.com/recipe/255630/tofu-basil-dressing/"
}