{
  "title": "Opal",
  "directions": [
    "Combine all ingredients in a cocktail shaker and shake vigorously. Strain into a cocktail glass."
  ],
  "ingredients": [
    "1 ounce gin",
    "1/2 ounce Triple Sec",
    "1/2 ounce orange juice",
    "1/4 teaspoon superfine sugar",
    "1/2 teaspoon orange-flower water",
    "3 or 4 ice cubes"
  ],
