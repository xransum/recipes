    "ingredients": [
        "2 cups roughly chopped arugula",
        "1 1/2 cups roughly chopped fresh cilantro",
        "1/2 avocado, peeled and pitted",
        "1 lime, juiced",
        "2 cloves garlic, minced",
        "1 tablespoon water, or as needed",
        "salt to taste",
        "ground black pepper to taste"
