{
  "title": "Avocado Dressing",
  "directions": [
    "Blend avocado, yogurt, olive oil, lemon juice, garlic, sea salt, hot sauce, and black pepper together in a blender until smooth."
  ],
  "ingredients": [
    "1 avocado, peeled and pitted",
    "1/2 cup plain yogurt",
    "1/4 cup extra-virgin olive oil",
    "3 tablespoons lemon juice",
    "2 cloves garlic",
    "1 teaspoon sea salt",
    "1/4 teaspoon hot pepper sauce",
    "1/8 teaspoon ground black pepper"
  ],
  "lang": "en-US",
  "tags": [],
  "source": "All Recipes",
  "sourceUrl": "http://allrecipes.com/recipe/241148/avocado-dressing/"
