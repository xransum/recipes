{
  "title": "Orange and Ginger Mayonnaise",
  "directions": [
    "Whisk mayonnaise, orange peel, fresh ginger, and lime juice in a small bowl to blend."
  ],
  "ingredients": [
    "1/2 cup light mayonnaise",
    "1 teaspoon grated orange peel",
    "2 teaspoons minced peeled fresh ginger",
    "1 tablespoon fresh lime juice"
  ],
