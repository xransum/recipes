    "ingredients": [
        "12 cups apple cider",
        "1/4 cup orange juice",
        "Peel (orange part only) from 1 orange, cut into strips",
        "1 bay leaf",
        "1 tablespoon (packed) brown sugar",
        "2 cinnamon sticks",
        "2 whole cloves",
        "2 whole allspice",
        "2 tablespoons fresh lemon juice",
        "Pinch of salt",
        "1 1/2 cups applejack brandy (optional)"
