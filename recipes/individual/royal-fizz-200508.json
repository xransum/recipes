{
  "title": "Royal Fizz",
  "directions": [
    "Combine all ingredients except the soda in a cocktail shaker and shake vigorously. Strain into an 8-ounce highball glass and fill with soda."
  ],
  "ingredients": [
    "2 ounces gin",
    "2 tablespoons lemon juice",
    "1 teaspoon superfine sugar",
    "1 egg",
    "3 or 4 ice cubes",
    "Club soda"
  ],
